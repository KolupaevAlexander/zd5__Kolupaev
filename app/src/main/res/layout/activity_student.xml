<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.student.StudentActivity"
    android:background="@color/background">
    <EditText
        android:id="@+id/searchTeacherByNameEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите имя преподавателя"
        android:textColor="@color/black"
        android:textColorHint="#AD121010"
        android:layout_marginBottom="16sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/searchTeacherBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Искать"/>
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:text="отменить"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teacherInfoRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>